{% extends 'base.html.twig' %}

{% block title %}Réinitialisation du mot de passe
{% endblock %}

{% block body %}
	<div class="container">
		<div class="row">
			<div class="col-12">
				<h1>Reset</h1>
				{{ form_start(requestPassForm)}}
				{{ form_row(requestPassForm.email)}}
				<button type="submit" class="btn btn-primary btn-lg">Réinitialiser</button>
				{{ form_end(requestPassForm)}}
			</div>
		</div>
	</div>
{% endblock %}

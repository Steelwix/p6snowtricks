{% extends 'base.html.twig' %}

{% block title %}Profil de
	{{app.user.username}}
{% endblock %}

{% block body %}
	<section class="login-page">
		<div class="row">
			<div class="col-12 text-center">
				<h1>Profil</h1>
			</div>
			<div class="card col-10 mx-auto text-center login-card"><br>

				<p>Nom d'utilisateur :
					{{ app.user.username }}</p>
				<p>
					Email :
					{{ app.user.email }}</p>
				<p>Mot de passe :
					<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
					<a class="btn btn-danger" href="{{ path('app_reset_password') }}">RÃ©initialiser le mot de passe</a><br><br>


					{{ form_start(accountForm)}}
					{{ form_row(accountForm.profilePicture)}}<br>
					<button type="submit" class="btn btn-primary btn-lg">Envoyer</button><br><br>
					{{ form_end(accountForm)}}
					{% if app.user.profilePicture.name  is defined %}
						<img class="img-fluid mx-auto" src="{{asset('/uploads/profilepicture/'~ app.user.profilePicture.name)}}" alt="Image" width="150">
						<a href="{{path('app_remove_pp')}}"><img src="{{asset('/assets/icons/trash.svg')}}" alt="Image" width="20"></a>
					{% else %}
						<img class="img-fluid mx-auto" height="40" width="40" src="https://img.myloview.fr/stickers/user-icon-human-person-symbol-avatar-log-in-vector-sign-400-256564255.jpg" alt="Card image cap">
						<p>Pas de photo de profil</p>
					{% endif %}
				</p>
			</div>
		</div>
	</section>
{% endblock %}

{% extends 'base.html.twig' %}

{% block body %}
	<section class="container">
		<div class="row">
			<div class="col-12">
				<h1>{{title}}</h1>

			</div>

			{% for trick in tricks %}
				<div class="card h-200" style="width: 15rem;">
					{% if trick.illustration.iDmedia.mediaName  is defined %}
						<img class="card-img-top" src="{{asset('/uploads/trickmedia/'~ trick.illustration.iDmedia.mediaName)}}" alt="Card image cap">
					{% else %}
						<img class="img-fluid w-10" height="40" width="40" src="https://img.myloview.fr/stickers/user-icon-human-person-symbol-avatar-log-in-vector-sign-400-256564255.jpg" alt="Card image cap">
					{% endif %}

					<a href="">X</a>
					<a href="{{ path('app_modify_trick',{slug: trick.slug}) }}">E</a>
					<div class="card-body">
						<h3 class="card-title">{{trick.trickname}}</h3>
						<p class="card-text">{{trick.description}}</p>
						<a href="{{ path('app_trick',{slug: trick.slug}) }}" class=" btn btn-primary">Lire</a>
					</div>
				</div>


			{% endfor %}

		</div>
	</section>
{% endblock %}
